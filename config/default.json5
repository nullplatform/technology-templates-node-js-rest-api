/*
  Refer to 'custom-environment-variables.json5' to determine which environment variables override the values in this file
*/
{
  server: {
    host: '0.0.0.0',
    port: '8080',
    disableRequestLogging: false,
    maxParamLength: 200,
    openAPI: {
      config: {
        info: {
          title: 'My API Definition',
          version: '0.0.1',
        },
        servers: [{ url: 'https://api.nullplatform.com' }],
      },
      uiConfig: {
        routePrefix: '/api-docs',
      },
    },
    log: {
      level: 'info',
      errorKey: 'error',
      redact: ['error.cause.options.headers.authorization', 'req.headers.authorization'],
      base: null,
      timestamp: false,
      transport: {
        target: 'pino-pretty',
        options: {
          colorize: true,
          singleLine: true,
        },
      },
    },
    cluster: {
      workers: null,
      respawn: 1000,
    },
  },
  database: {
    name: null,
    schema: null,
    user: null,
    password: null,
    host: null,
    port: 5432,
    logging: true,
    dialect: 'postgres',
    pool: {
      max: 10,
      min: 2,
      idle: 10000,
      acquire: 30000,
    },
  },
  client: {
    logging: true,
    // "apiKey" must be loaded from environment variables see: custom-environment-variables.json5
    auth: {
      baseURL: 'https://auth.nullplatform.io',
      timeout: 5000,
    },
    coreEntities: {
      baseURL: 'https://api.nullplatform.io',
      timeout: 5000,
    },
  },
  topic: {
    enabled: false,
    region: 'us-east-1',
    endpoint: null,
    audit: {
      enabled: true,
      region: 'us-east-1',
      endpoint: null,
      topicArn: 'arn:aws:sns:us-east-1:283477532906:audit',
    },
  },
}
